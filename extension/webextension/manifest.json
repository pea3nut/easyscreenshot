{
    "manifest_version": 2,
    "name": "__MSG_extensionName__",
    "version": "2.55.2",
    "icons": {
        "64": "images/easyscreenshot-icon.png"
    },
    "description": "__MSG_extensionDescription__",
    "homepage_url": "http://www.firefox.com.cn/",
    "applications": {
        "gecko": {
            "id": "easyscreenshot2@mozillaonline.com",
            "strict_min_version": "54.0"
        }
    },
    "permissions": [
        "storage",
        "downloads",
        "notifications",
        "<all_urls>"
    ],
    "background": {
        "scripts": [
            "lib/Chaz.js",
            "editor/editor.background.js",
            "background/PrintScreenLauncher.background.js",
            "background/easyscreenshot.background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "lib/Chaz.js",
                "content/PrintScreen.content.js",
                "selector/Selector.content.js",
                "content/easyscreenshot.content.js"
            ],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        "editor/page.html",
        "editor/audio/capture.ogg",
        "editor/audio/export.ogg",
        "selector/selector.html"
    ],
    "default_locale": "en_US",
    "browser_action": {
        "browser_style": true,
        "default_icon": "images/easyscreenshot-browser_action.png",
        "default_popup": "popup/easyscreenshot.popup.html",
        "default_title": "__MSG_browserActionTitle__"
    }
}
